<section>
    <h2>Create New Profile</h2>

    <form class="new-profile-form">
        <div>
            <label for="profile-name">Plant Name</label>
            <input type="text" id="profile-name" size="60" name="profile-name" />
        </div>
        <div>
            <label for="plant-sun">Recommended Sunlight</label>
            <select name="plant-sun" id="plant-sun">
                <option selected>Select option</option>
                <option value="Full">Full</option>
                <option value="Partial">Partial</option>
                <option value="Shade">Shade</option>
            </select>
        </div>
        <div>
            <label for="plant-water">Recommended Water</label>
            <select name="plant-water" id="plant-water">
                <option selected>Select option</option>
                <option value="Daily">Daily</option>
                <option value="Bi-Weekly">Bi-Weekly</option>
                <option value="Weekly">Weekly</option>
            </select>
        </div>
        <div>
            <label for="water-date">Last Water Date</label>
            <input type="date" id="water-date" name="water-date">
        </div>
        {{!-- <div>
            <label for="plant-img">Image</label>
            <input type="file" id="plant-img" name="plant-img">
        </div> --}}
        
        <button type="submit" class="btn">Create Profile</button>
    </form>
</section>

<script src="/javascript/add-profile.js"></script>