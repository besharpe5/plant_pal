{{#if loggedIn}}
<section class="full-width">
    <a class="add-plant-btn" href="/dashboard/create">Add a New Plant</a>

<div class="d-flex flex-wrap justify-content-center">
    {{#each plants as |plant|}}
    <p>
        {{> plant-info plant }}
    </p>
    {{/each}}
</div>

</section>

    
<script src="/javascript/add-post.js"></script>
{{else}}
    <img src="/images/plantanimation.gif"/>
{{/if}}